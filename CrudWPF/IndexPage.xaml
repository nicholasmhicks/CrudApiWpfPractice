<Page x:Class="CrudWPF.IndexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CrudWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndexPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*" />
            <RowDefinition Height="150*" />
            <RowDefinition Height="150*" />
        </Grid.RowDefinitions>

        <Button x:Uid="0" Content="Authors" Background="Transparent" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" Width="800" Height="150" Click="Author_Click"/>
        <Button x:Uid="1" Content="Students" Background="Transparent" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="800" Height="150" Click="Student_Click"/>
        <Button x:Uid="2" Content="Books" Background="Transparent" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="800" Height="150" Click="Books_Click"/>


    </Grid>
</Page>
